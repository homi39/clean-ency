<header class='top-page-header'>
      <div class='mini-title'>
        <%= link_to 'おそうじ事典', root_path %>
      </div>
      <div class='lists-left'>
      </div>
      <div class='nav'>
      </div>
</header>
<div class ='main'>
    <div class='main-contents'>
      <h2 class='form-info-header'>ユーザー情報を変更する</h2>

      <%= form_for(resource, as: resource_name, url: user_registration_path, html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :password, "新しいパスワード" %> <i>(変更しない場合は空欄のままにしてください)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> 文字以上英数字混合</em>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation,"確認用パスワード" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">ニックネーム</label>
        </div>
         <div class="input-name"><%= @user.nickname %></div>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">お名前(全角)</label>
        </div>
        <div class='input-name-wrap'>
          <%= f.text_area :name, class:"input-name", id:"name", placeholder:"例) 山田太郎" %>
        </div>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">お名前カナ(全角)</label>
        </div>
        <div class='input-name-wrap'>
          <%= f.text_area :name_kana, class:"input-name", id:"name-kana", placeholder:"例) ヤマダタロウ" %>
        </div>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">生年月日</label>
        </div>
        <div class='input-birth-wrap'>
          <%= @user.birth %>
        </div>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class='form-text'>性別</label>
        </div>
        <div class='input-name-wrap'>
          <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"select"}) %>
        </div>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class='form-text'>ご職業</label>
        </div>
        <div class='input-name-wrap'>
          <%= f.collection_select(:occupation_id, Occupation.all, :id, :name, {}, {class:"select"}) %>
        </div>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">同居人数（ご自身を含む）</label>
        </div>
        <div class='input-name-wrap'>
          <%= f.text_area :family_member, class:"input-number", id:"family_member", placeholder:"例）4" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit "更新" %>
      </div>
      <div class="form-group">
       <%= link_to "もどる", :back %>
       </div>
      <% end %>

      <div class="destroy-form">
        <h3>アカウント削除</h3>
        <p><%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
      </div>
  </div>
</div>
