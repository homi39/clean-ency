<div class ='main'>
    <div class='main-contents'>
      <h2 class='form-info-header'>ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
      <div class='login-flash-message'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">メールアドレス</label>
          </div>
          <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
        </div>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">パスワード</label>
          </div>
          <%= f.password_field :password, class:"input-default", id:"password", placeholder:"英字と数字の両方を含めて6ケタ以上" %>
        </div>
      
        <div class='login-btn'>
          <%= f.submit "ログイン" ,class:"login-blue-btn" %>
        </div>
      <% end %>
    </div>
</div>