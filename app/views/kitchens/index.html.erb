<%# ヘッダー部分%>
<header class='top-page-header'>
  <div class='mini-title'>おそうじ事典</div>
  <div class='lists-left'>
    <form class='search-form' action='#'> 
      <input class='input-box' placeholder='キーワードを入力'>
      <button class='search-button'>検索</button>
    </form>
  </div>
  <div class='nav'>
    <ul class='lists-right'>
      <li class='log-in'>ログイン</li>
      <li class='sign-up'>新規登録</li>
    </ul>
  </div>
</header>
<%# ヘッダー部分%>
<div class='main'>
  <div class='main-contents'>
    <div class='article-box'>
      <% @kitchens.each do |kitchen| %>
      <%= link_to kitchen_path(kitchen.id), class: "link",method: :get do %>
      <div class='article-title'>
        <%= kitchen.title %>
      </div>
      <div class='article-text'>
        <%= kitchen.text %>
      </div>
      <% end %>
      <% end %>
    </div>
  </div>
  <div class='input-btn'>
    <span class='input-btn-text'>投稿する</span>
      <a href="">
      <%= image_tag 'Orion_edit.png' , size: '60x60' ,class: "input-btn-icon" %>
    </a>
  </div>
</div>
