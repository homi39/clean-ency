<%# ヘッダー部分%>
<header class='top-page-header'>
  <div class='mini-title'>おそうじ事典</div>
  <div class='lists-left'>
    <form class='search-form' action='#'> 
      <input class='input-box' placeholder='キーワードを入力'>
      <button class='search-button'>検索</button>
    </form>
  </div>
  <div class='nav'>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %> </li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "log-in" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>
<%# ヘッダー部分%>
<div class='main'>
  <div class='main-contents'>
    <div class='article-box'>
      <% @bathes.each do |bath| %>
      <%= link_to bathe_path(bath.id), class: "link", method: :get do %>
      <div class='article-title'>
        <%= bath.title %>
      </div>
      <div class='article-text'>
        <%= bath.text %>
      </div>
      <% end %>
      <% end %>
    </div>
  </div>
  <div class='input-btn'>
    <span class='input-btn-text'>投稿する</span>
      <a href="">
      <%= image_tag 'Orion_edit.png' , size: '60x60' ,class: "input-btn-icon" %>
    </a>
  </div>
</div>
