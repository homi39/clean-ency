<header class='top-page-header'>
      <div class='mini-title'>
        <%= link_to 'おそうじ事典', root_path %></div>
      <div class='lists-left'>
      </div>
      <div class='nav'>
        <ul class='lists-right'>
          <% if user_signed_in? %>
            <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li>
            <span>さん</span>
            <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %> </li>
          <% else %>
            <li><%= link_to 'ログイン', new_user_session_path, class: "log-in" %></li>
            <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
          <% end %>
        </ul>
      </div>
</header>
<div class='main'>
  <div class='main-contents'>
    <div class='article-box'>
      <div class='article-title'>
        <%= @toilet.title %>
      </div>
      <div class='article-text'>
        <%= @toilet.text %>
      </div>
      <div class='edit-btn'>
        <% if @toilet.user.id == current_user.id %>
          <%= link_to '編集する', edit_toilet_path(@toilet.id), class: "edit-btn", method: :get %>
        <% end %>
      </div>
      <div class='comment-form'>
        <% if user_signed_in? %>
          <%= form_with(model: [@toilet, @tocomment], local: true) do |f| %>
            <div><%= f.text_area :text, placeholder: "記事についての質問・コメントをこちらに記入してください", size: "70×40" %></div>
            <div class='submit-btn'><%= f.submit "送信" %></div>
          <% end %>
        <% else %>
          <p>※質問・コメントはログインが必要です</p>
        <% end %>
      </div>
      <div class='comments'>
        <div class='comment-title'>質問・コメント一覧</div>
        <div class='comment-text'>
        <% if @tocomments %>
          <% @tocomments.each do |comment| %>
            <p>
              <%= comment.user.nickname %>さん:
              <%= comment.text %>
            </p>
         <% end %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
